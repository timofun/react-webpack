{
  "parser": "babel-eslint",
  // 环境
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "airbnb",
  "rules": {
    // 不写分号
    "semi": [0],
    "react/jsx-filename-extension": [0],
    "linebreak-style": [0],
    "arrow-parens": [0],
    "no-param-reassign": [0],
    "arrow-body-style": [0],
    "react/no-danger": [0],
    "import/no-named-as-default": [0],
    "class-methods-use-this": [0],
    "react/jsx-tag-spacing": [0]
  }
}
